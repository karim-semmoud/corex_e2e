<Layouts.app
  flash={@flash}
  mode={@mode}
  theme={@theme}
  locale={@locale}
  current_path={@current_path}
>
  <div class="layout__row">
    <h1>Hidden Input</h1>
    <h2>Controller View</h2>
  </div>
  <.form for={@form} as={:user} id="hidden-input-form">
    <.hidden_input name="user[id]" value="123" />
    <.text_input id="my-text-input" name="user[name]" class="text-input">
      <:label>Name</:label>
    </.text_input>
  </.form>
</Layouts.app>
